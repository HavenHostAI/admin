{
    "mcpServers": {
        "shadcn-admin-kit": {
            "command": "npx",
            "args": [
                "-y",
                "shadcn@canary",
                "registry:mcp"
            ],
            "env": {
                "REGISTRY_URL": "https://marmelab.com/shadcn-admin-kit/r/registry.json"
            }
        },
        "convex": {
            "command": "npx",
            "args": [
              "-y",
              "convex@latest",
              "mcp",
              "start"
            ]
        }
    }
}
